import sqlite3
from tkinter import *
import string

nameVal, fnameVal, mnameVal= "", "", ""
#optVal = None
#splash = None
name, fname, mname, grade, interest, hobbies, info = None, None, None, None, None, None, None

def startQuiz():
    global nameVal, fname, mname
    nameVal = str(name.get()).title()
    fnameVal=str(fname.get()).title()
    mnameVal=str(mname.get()).title()
  
  
    if len(nameVal) == 0:
        info.config(text="Please Enter Valid Name")
        return
    
    elif len(fnameVal)==0:
        info.config(text="Please Enter a Valid Father's Name")
        return
    elif len(mnameVal) == 0:
        info.config(text="Please Enter a Valid Mother's Name")
        return
    else:
        global first
        first.destroy()
        secondUI()

